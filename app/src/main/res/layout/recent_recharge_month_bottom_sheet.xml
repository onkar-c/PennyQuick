<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
          android:id="@+id/header"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
              <RelativeLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/distance_5">
                <ImageButton
                  android:id="@+id/bt_close"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/distance_10"
                  android:padding="@dimen/distance_10"
                  android:contentDescription="@string/month"
                  android:layout_centerVertical="true"
                  android:layout_alignParentStart="true"
                  android:background="@drawable/ic_close_blue" />

                <TextView
                  android:id="@+id/tx_sheet_header"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@id/bt_close"
                  android:padding="@dimen/distance_10"
                  android:layout_centerVertical="true"
                  android:text="@string/choose_month"
                  android:textColor="@color/text_color_5"
                  android:layout_toStartOf="@+id/clear"
                  android:textSize="@dimen/textSize_15" />

                <TextView
                  android:id="@+id/clear"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/clear"
                  android:padding="@dimen/distance_10"
                  android:layout_alignParentEnd="true"
                  android:textSize="@dimen/textSize_15"
                  android:textColor="@color/bottom_bar_end_color"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="@dimen/distance_15"/>
              </RelativeLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"/>
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_month_list"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:layout_marginStart="@dimen/distance_10"
          android:layout_marginEnd="@dimen/distance_10"
          android:layout_marginBottom="@dimen/distance_75"
          android:layout_below="@+id/header"/>
  </RelativeLayout>
    <LinearLayout
      android:id="@+id/pinned_bottom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      android:layout_gravity="bottom"
      android:orientation="vertical">
      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_5"
        android:layout_marginEnd="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_10"
        android:padding="@dimen/distance_10"
        android:background="@drawable/button_background2"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_17" />
    </LinearLayout>
</FrameLayout>