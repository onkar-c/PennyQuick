<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/profile_background">
  <include layout="@layout/common_tool_bar" />
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-20dp">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
          android:id="@+id/cv_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="20dp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/distance_10">
          <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/distance_100"
            android:layout_height="@dimen/distance_100"
            android:contentDescription="@string/my_profile"
            android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

      <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_profile"
        android:layout_marginTop="@dimen/distance_20"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSize_30"
        android:textColor="@android:color/white"
        android:text="@string/dummy_user_name"/>

      <TextView
        android:id="@+id/tv_profile_mob_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_below="@+id/tv_profile_name"
        android:layout_centerHorizontal="true"
        android:text="@string/dummy_mob_no"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_18" />

      <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_mob_no"
        android:layout_marginTop="@dimen/distance_7"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSize_16"
        android:textColor="@android:color/white"
        android:text="@string/dummy_email"/>

      <TextView
        android:id="@+id/tv_profile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_email"
        android:layout_marginTop="@dimen/distance_7"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSize_16"
        android:textColor="@android:color/white"
        android:text="@string/dummy_address"/>

      <TextView
        android:id="@+id/tv_txt_wallet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_address"
        android:layout_marginTop="@dimen/distance_30"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSize_18"
        android:textColor="@color/radio_btn_bg_color"
        android:textStyle="bold"
        android:text="@string/wallet_balance"/>

      <TextView
        android:id="@+id/tv_profile_wallet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_txt_wallet_balance"
        android:layout_marginTop="@dimen/distance_5"
        android:layout_marginBottom="@dimen/distance_30"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSize_25"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/dummy_number"/>

      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/tv_profile_wallet_balance"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_marginTop="@dimen/distance_10"
          android:layout_marginEnd="@dimen/distance_10"
          android:layout_marginBottom="@dimen/distance_10"
          android:layout_marginStart="@dimen/distance_20"
          android:layout_gravity="bottom">
          <TextView
            android:id="@+id/tv_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_6"
            android:text="@string/change_pwd"
            android:padding="@dimen/distance_10"
            android:drawablePadding="@dimen/distance_5"
            app:drawableRightCompat="@drawable/ic_arrow_right"
            android:gravity="center_vertical"/>
          <TextView
            android:id="@+id/tv_recent_recharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_6"
            android:text="@string/recent_recharges"
            android:padding="@dimen/distance_10"
            android:drawablePadding="@dimen/distance_10"
            app:drawableRightCompat="@drawable/ic_arrow_right"
            android:gravity="center_vertical"/>
          <TextView
            android:id="@+id/tv_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_6"
            android:text="@string/reports"
            android:padding="@dimen/distance_10"
            android:drawablePadding="@dimen/distance_10"
            app:drawableRightCompat="@drawable/ic_arrow_right"
            android:gravity="center_vertical"/>
          <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/text_color_6"
            android:text="@string/privacy_policy"
            android:padding="@dimen/distance_10"
            android:drawablePadding="@dimen/distance_10"
            app:drawableRightCompat="@drawable/ic_arrow_right"
            android:gravity="center_vertical"/>
          <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_marginBottom="@dimen/distance_50"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/red_text_color"
            android:text="@string/logout"
            android:padding="@dimen/distance_10"
            android:gravity="center_vertical"/>
        </LinearLayout>

      </androidx.cardview.widget.CardView>
    </RelativeLayout>
  </ScrollView>
</LinearLayout>