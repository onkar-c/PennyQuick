<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activities.providersList.ProvidersListActivity">

  <include android:id="@+id/commonToolBar"
    layout="@layout/common_tool_bar"/>
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/commonToolBar">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  <GridLayout
    android:id= "@+id/dthGrid"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/distance_10"
    android:paddingBottom="@dimen/distance_10"
    android:layout_marginStart="@dimen/distance_10"
    android:layout_marginEnd="@dimen/distance_10"
    android:useDefaultMargins="true"
    android:visibility="gone"
    android:columnCount="2"
    android:rowCount="2">

    <androidx.cardview.widget.CardView
      android:id="@+id/dth_airtel"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      app:cardCornerRadius="8dp"
      android:layout_margin="@dimen/distance_15"
      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/airtel_dth"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_18"
        android:padding="@dimen/distance_10"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/airtel"
        android:drawablePadding="@dimen/minus_distance_30"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
      android:id="@+id/dth_dish_tv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      app:cardCornerRadius="8dp"
      android:layout_margin="@dimen/distance_15"
      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dish_tv"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_18"
        android:padding="@dimen/distance_10"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/ic_dish_tv"
        android:drawablePadding="@dimen/minus_distance_30"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/dth_sun_direct"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      app:cardCornerRadius="8dp"
      android:layout_margin="@dimen/distance_15"
      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sun_direct"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_18"
        android:padding="@dimen/distance_10"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/ic_sun_direct"
        android:drawablePadding="@dimen/minus_distance_30"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/dth_tata_sky"
