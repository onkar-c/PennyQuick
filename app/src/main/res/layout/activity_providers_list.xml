      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/mtnl_mumbai"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_18"
        android:padding="@dimen/distance_10"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/mtnl1"
        android:drawablePadding="@dimen/minus_distance_22"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/land_line_reliance"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      app:cardCornerRadius="8dp"
      android:layout_margin="@dimen/distance_15"
      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
