      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tata_sky"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_18"
        android:padding="@dimen/distance_10"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/tata_sky"
        android:drawablePadding="@dimen/minus_distance_30"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/dth_d2h"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      app:cardCornerRadius="8dp"
      android:layout_marginTop="@dimen/distance_15"
      android:layout_marginStart="@dimen/distance_15"
      android:layout_marginEnd="@dimen/distance_15"
      android:layout_marginBottom="@dimen/distance_30"
      app:cardElevation="15dp"
      app:cardPreventCornerOverlap="false">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/d2h"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_18"
        android:padding="@dimen/distance_10"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/d2h"
        android:drawablePadding="@dimen/minus_distance_30"/>
    </androidx.cardview.widget.CardView>

  </GridLayout>


