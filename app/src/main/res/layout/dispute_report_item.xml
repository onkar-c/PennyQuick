<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_columnWeight="1"
  app:cardCornerRadius="2dp"
  android:layout_marginTop="@dimen/distance_5"
  android:layout_marginBottom="@dimen/distance_5"
  android:layout_marginStart="@dimen/distance_10"
  android:layout_marginEnd="@dimen/distance_10"
  app:cardElevation="5dp"
  app:cardPreventCornerOverlap="false">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="6">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_10"
        android:weightSum="10">
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_15"
        android:textColor="@android:color/black"
        android:gravity="end"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/distance_5"/>

        <TextView
          android:id="@+id/date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/distance_10"
          android:layout_weight="8"
          android:text="@string/transaction_dummy_date"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:layout_marginTop="@dimen/distance_5"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_10"
        android:weightSum="10">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/txn_id"
          android:textStyle="bold"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:gravity="end"
          android:layout_weight="2"
          android:layout_marginTop="@dimen/distance_5"/>

        <TextView
          android:id="@+id/transaction_id"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/distance_10"
          android:layout_weight="8"
          android:text="@string/dummy_trans_id"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:layout_marginTop="@dimen/distance_5"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_10"
        android:weightSum="10">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/message_display"
          android:textStyle="bold"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:gravity="end"
          android:layout_weight="2"
          android:layout_marginTop="@dimen/distance_5"/>

        <TextView
          android:id="@+id/message"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/distance_10"
          android:layout_weight="8"
          android:text="@string/dummy_transaction_message"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:layout_marginTop="@dimen/distance_5"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginBottom="@dimen/distance_10"
        android:weightSum="10">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="@string/transaction_status"
          android:textStyle="bold"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:gravity="end"
          android:layout_weight="2"
          android:layout_marginTop="@dimen/distance_5"/>

        <TextView
          android:id="@+id/status"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/distance_10"
          android:layout_weight="8"
          android:text="@string/solve"
          android:textSize="@dimen/textSize_15"
          android:textColor="@android:color/black"
          android:layout_marginTop="@dimen/distance_5"/>
      </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>