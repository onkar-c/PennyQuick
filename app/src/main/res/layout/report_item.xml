<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_columnWeight="1"
  app:cardCornerRadius="2dp"
  android:layout_marginTop="@dimen/distance_5"
  android:layout_marginBottom="@dimen/distance_5"
  android:layout_marginStart="@dimen/distance_10"
  android:layout_marginEnd="@dimen/distance_10"
  app:cardElevation="5dp"
  app:cardPreventCornerOverlap="false">
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/distance_7"
  android:layout_weight="10"
  android:orientation="horizontal"
  android:baselineAligned="false">
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="6">
    <TextView
      android:id="@+id/report_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ledger_report"
      android:textSize="@dimen/textSize_15"
      android:textColor="@android:color/black"
      android:layout_marginTop="@dimen/distance_5"/>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
      android:id="@+id/transaction_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/debit"
      android:textSize="@dimen/textSize_15"
      android:textStyle="bold"
      android:textColor="@color/transaction_success"
      android:layout_marginTop="@dimen/distance_5"/>

      <TextView
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_amount"
        android:textSize="@dimen/textSize_15"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/distance_5"
        android:layout_marginStart="@dimen/distance_5"/>
    </LinearLayout>

    <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/transaction_dummy_date"
      android:textSize="@dimen/textSize_13"
      android:textColor="@android:color/black"
      android:layout_marginTop="@dimen/distance_5"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="@dimen/textSize_15"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/distance_5"/>

      <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_company_type"
        android:textSize="@dimen/textSize_15"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/distance_5"
        android:layout_marginTop="@dimen/distance_5"/>
    </LinearLayout>


  </LinearLayout>
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="4"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:text="@string/balance"
      android:textSize="@dimen/textSize_15"
      android:textStyle="bold"
      android:textColor="@android:color/black"
      android:layout_marginTop="@dimen/distance_5"/>

    <TextView
      android:id="@+id/balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/dummy_amount"
      android:layout_gravity="end|center_horizontal"
      android:textSize="@dimen/textSize_15"
      android:textColor="@android:color/black"
      android:layout_marginTop="@dimen/distance_5"/>
  </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>