<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_columnWeight="1"
  app:cardCornerRadius="2dp"
  android:layout_marginTop="@dimen/distance_5"
  android:layout_marginBottom="@dimen/distance_5"
  android:layout_marginStart="@dimen/distance_10"
  android:layout_marginEnd="@dimen/distance_10"
  app:cardElevation="5dp"
  app:cardPreventCornerOverlap="false">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/distance_7"
    android:layout_weight="10"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="6">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/company_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:src="@drawable/airtel_small"
          android:scaleType="center"
          android:layout_weight="0.2"
          android:contentDescription="@string/airtel"/>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0.8"
          android:layout_marginStart="@dimen/distance_10"
          android:orientation="vertical">

          <TextView
            android:id="@+id/company_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_company_type"
            android:textSize="@dimen/textSize_15"
            android:textColor="@android:color/black"/>

          <TextView
            android:id="@+id/customer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_mob_no"
            android:textSize="@dimen/textSize_15"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginStart="@dimen/distance_5"/>
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance_5">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/txn_id"
          android:textSize="@dimen/textSize_16"
          android:layout_gravity="center_vertical"
          android:textStyle="bold"
          android:textColor="@android:color/black"/>

        <TextView
          android:id="@+id/transaction_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/dummy_trans_id"
          android:textSize="@dimen/textSize_13"
          android:layout_gravity="center_vertical"
          android:textColor="@android:color/black"
          android:layout_marginStart="@dimen/distance_5" />
      </LinearLayout>


      <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_dummy_date"
        android:textSize="@dimen/textSize_13"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/distance_5"/>

    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="4"
      android:layout_gravity="center_vertical"
      android:orientation="vertical">

      <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_amount"
        android:layout_gravity="end"
        android:gravity="center"
        android:textSize="@dimen/textSize_15"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/distance_5"
        android:drawablePadding="@dimen/distance_15"
        app:drawableBottomCompat="@drawable/success_small" />
    </LinearLayout>

  </LinearLayout>
</androidx.cardview.widget.CardView>